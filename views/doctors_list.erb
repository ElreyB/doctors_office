
<div class="panel panel-primary">
  <div class="panel-heading">
    <form action="/doctor" method="post">
      <div class="row center">
        <div class="col-xs-4 col-xs-offset-1">
          <label for="specialties_list">Select a Specialty</label>
          <select id='specialties_list' name='specialty-id' type='text'>
            <% @specialties.each do |specialty| %>
            <option value="<%= specialty.id%>"> <%= specialty.name %> </option>
            <% end %>
          </select>
        </div>
        <div class="col-xs-4">
          <label for="doctor">New Doctor:</label>
          <input id="doctor" name="doctor-name" type="text" placeholder="Doctor's Name" class="form-control">
        </div>
        <div class="col-xs-2">
          <button type="submit" class="btn add_doctor">Add Doctor</button>
        </div>
      </div>
    </form>
  </div>
  <div class="panel-body">
    <% if @doctors.any? %>
      <h3>List of Current Doctors in Office</h3>
      <% @doctors.each do |doctor| %>
        <ul>
          <li><a href="/doctors/<%= doctor.id %>"> <%= doctor.name %> : <%= Specialty.find(doctor.specialty_id).name %> </a></li>
        </ul>
      <% end %>
    <% else %>
      <h3>There are currently no doctors at this office.</h3>
    <% end %>
  </div>
</div>

<footer>
  <a href="/"><button type="button" class="btn">Home</button></a>
  <a href="/specialties"><button type="button" class="btn">Doctors by Specialty</button></a>
  <a href="/patients"><button type="button" class="btn">Patients on Roster</button></a>
  <a href="/patient-count"><button type="button" class="btn">Patient Count</button></a>
</footer>
