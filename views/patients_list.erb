<div class="row">
  <div class="col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <form action="/patient" method="post">
          <label for="doctors_list">Select a Doctor</label>
          <select id='doctors_list' name='doctor-id' type='text'>
            <% @doctors.each do |doctor| %>
            <option value="<%= doctor.id%>"> <%= doctor.name %> </option>
            <% end %>
          </select>
          <label for="patient">Add Patient to Roster:</label>
          <input id="patient" name="patient-name" type="text" placeholder="Patient's Name">
          <input id="birthday" name="patient-birthday" type="date" placeholder="Patient's Birthday">
          <button type="submit" class="btn">Add Patient</button>
        </form>
      </div>
      <div class="panel-body">
        <% if @patients.any? %>
          <h3>List of Current Patients on Roster</h3>
          <% @patients.each do |patient| %>
            <ul>
              <li><a href="/patients/<%= patient.id %>"> <%= patient.name %> </a></li>
            </ul>
          <% end %>
        <% else %>
          <h3>There are currently no patients on roster.</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
<footer>
  <a href="/"><button type="button" class="btn">Home</button></a>
</footer>
